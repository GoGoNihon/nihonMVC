							<input type="text" class="form-control input-sm" id="url" name="url" placeholder="hypened-school-name" required>
						</div>
						<div class="form-group col-xs-12 text-center">
							<button type="submit" class="btn btn-default">create school</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<hr />


	<div class="row">
		<div class="form-group col-xs-12">
			<div class="input-group">
