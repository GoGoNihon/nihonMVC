		@*add new school*@

		<div class="col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<h3 class="panel-title">add new school</h3>
					<div class="icon">
						<i class="icon icon-plus-circled"></i>
					</div>
				</div>
				<div class="panel-body">
					<form class="form" method="post" action="/api/createSchool/getSchoolList" data-ajax>
						<div class="form-group form-group-sm col-xs-12 col-sm-6">
							<label for="type">school type</label>
							<select type="text" class="form-control input-sm" name="type">
